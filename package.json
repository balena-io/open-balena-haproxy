{
  "name": "generate-haproxy-cfg",
  "version": "3.0.0",
  "description": "A tool for generating haproxy.cfg",
  "private": true,
  "scripts": {
    "build": "tsc",
    "prettify": "prettier --config ./node_modules/resin-lint/config/.prettierrc --write \"src/**/*.ts\" \"typings/**/*.ts\" \"test/**/*.ts\"",
    "lint": "resin-lint --typescript src/ test/ && tsc --noEmit",
    "test": "nyc mocha 'test/**/*.spec.ts'"
  },
  "bin": {
    "generate-haproxy-config": "./bin/generate-config"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/resin-io/balena-haproxy"
  },
  "author": "",
  "license": "Apache-2.0",
  "nyc": {
    "extension": [
      ".ts"
    ]
  },
  "dependencies": {
    "balena-certificate-client": "^1.1.1",
    "bluebird": "^3.7.2",
    "capitano": "^1.9.1",
    "lodash": "^4.17.15",
    "mz": "^2.7.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.5",
    "temp": "^0.8.4"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/bluebird": "^3.5.29",
    "@types/chai-as-promised": "^7.1.2",
    "@types/lodash": "^4.14.149",
    "@types/mocha": "^5.2.7",
    "@types/mz": "0.0.32",
    "@types/node": "^12.12.26",
    "@types/request": "^2.48.4",
    "@types/request-promise": "^4.1.45",
    "@types/temp": "^0.8.34",
    "app-root-path": "^2.2.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "husky": "^4.2.1",
    "lint-staged": "^10.0.6",
    "mocha": "^5.2.0",
    "nyc": "^13.3.0",
    "resin-lint": "^2.0.1",
    "ts-node": "^7.0.1",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --config ./node_modules/resin-lint/config/.prettierrc --write",
      "resin-lint --typescript --no-prettier"
    ]
  }
}
